<div class="page-content">
  <!-- BEGIN STYLE CUSTOMIZER -->
  
  <!-- END STYLE CUSTOMIZER -->
  <!-- BEGIN PAGE HEADER-->
  
  <!-- END PAGE HEADER-->
  <!-- BEGIN PAGE CONTENT-->
  <div class="row main-content-div">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
      <div class="dashboard-stat blue-madison">
        <div class="visual">
          <i class="fa fa-comments"></i>
        </div>
        <div class="details">
          <div class="number">
             <%=@message_count%>
          </div>
          <div class="desc">
            <%=ENV_VARS['messages']['menu1']['boxText1']%>
          </div>
        </div>
        <a class="more" href="#">
        &nbsp;
        </a>
      </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
      <div class="dashboard-stat red-intense">
        <div class="visual">
          <i class="fa fa-file-text-o"></i>
        </div>
        <div class="details">
          <div class="number">
             <%=@post_count%>
          </div>
          <div class="desc">
             <%=ENV_VARS['messages']['menu1']['boxText2']%>
          </div>
        </div>
        <a class="more" href="#">
        &nbsp;
        </a>
      </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
      <div class="dashboard-stat green-haze">
        <div class="visual">
          <i class="fa fa-heart"></i>
        </div>
        <div class="details">
          <div class="number">
             <%=@like_count%>
          </div>
          <div class="desc">
             <%=ENV_VARS['messages']['menu1']['boxText3']%>
          </div>
        </div>
        <a class="more" href="#">
        &nbsp;
        </a>
      </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
      <div class="dashboard-stat purple-plum">
        <div class="visual">
          <i class="fa fa-users"></i>
        </div>
        <div class="details">
          <div class="number">
             <%=@user_count%>
          </div>
          <div class="desc">
             <%=ENV_VARS['messages']['menu1']['boxText4']%>
          </div>
        </div>
        <a class="more" href="#">
        &nbsp;
        </a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="portlet full-height-content">
        <div class="portlet-title">
          <div class="caption">
            <i class="fa fa-bar-chart-o"></i>
            <span class="caption-subject bold uppercase"><%=ENV_VARS['messages']['menu1']['title']%></span>
          </div>
          <div class="actions">
            <div class="btn-group btn-group-devided" data-toggle="buttons">
              <label class="btn btn-circle btn-transparent grey-salsa">
              <input type="radio" name="options" class="toggle" id="initChartToday"><%=ENV_VARS['messages']['menu1']['filter1']%></label>
              <label class="btn btn-circle btn-transparent grey-salsa">
              <input type="radio" name="options" class="toggle" id="initChartTwoDays"><%=ENV_VARS['messages']['menu1']['filter2']%></label>
              <label class="btn btn-circle btn-transparent grey-salsa">
              <input type="radio" name="options" class="toggle" id="initChartWeek"><%=ENV_VARS['messages']['menu1']['filter3']%></label>
              <label class="btn btn-circle btn-transparent grey-salsa">
              <input type="radio" name="options" class="toggle" id="initChartMonth"><%=ENV_VARS['messages']['menu1']['filter4']%></label>
              <label class="btn btn-circle btn-transparent grey-salsa active">
              <input type="radio" name="options" class="toggle" id="initChartAll"><%=ENV_VARS['messages']['menu1']['filter5']%></label>
            </div>
          </div>
        </div>
        <div class="portlet-body">
          <div class="full-height-content-body" id="activity_section">
            <div class="row">
              <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div id="chat_activities"></div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div id="posts_activities"></div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div id="likes_activities"></div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div id="users_activities"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  

</div>
