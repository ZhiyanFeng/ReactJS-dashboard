<body class="login">
<!-- BEGIN SIDEBAR TOGGLER BUTTON -->
<div class="menu-toggler sidebar-toggler">
</div>
<!-- END SIDEBAR TOGGLER BUTTON -->
<!-- BEGIN LOGO -->
<div class="logo">
	<a href="/"><img src="https://s3.amazonaws.com/coffeemobile/logo-small.png" /></a>
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<div class="content">
	<!-- BEGIN FORGOT PASSWORD FORM -->
	<form action="/sessions" class="forget-form" method="post" novalidate="novalidate" style="display: block;">
		<!-- BEGIN STEP 1 -->
		<div style="">
			<h3>Account Setup</h3>
			<p>You will use your email address <strong><%=email_address%></strong> and a password to sign in to Coffee.</p>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Password</label>
				<input class="form-control placeholder-no-fix" type="password" autocomplete="off" id="register_password" placeholder="Password" name="password"/>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
				<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Re-type Your Password" name="rpassword"/>
			</div>
			<p class="hint">
				Please make sure you password a combination of characters, numbers and symbols of at least 6 characters long.
			</p>
			<div class="form-group">
				<button type="button" id="register-submit-btn" class="btn btn-success uppercase pull-right">Next</button>
			</div>
		</div>
		<!-- END STEP 1 -->

		<!-- BEGIN STEP 2 -->
		<div style="">
			<h3>Account Setup</h3>
			<p>You will use your email address <strong><%=email_address%></strong> and a password to sign in to Coffee.</p>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Password</label>
				<input class="form-control placeholder-no-fix" type="password" autocomplete="off" id="register_password" placeholder="Password" name="password"/>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
				<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Re-type Your Password" name="rpassword"/>
			</div>
			<p class="hint">
				Please make sure you password a combination of characters, numbers and symbols of at least 6 characters long.
			</p>
			<div class="form-group">
				<button type="button" id="register-submit-btn" class="btn btn-success uppercase pull-right">Next</button>
			</div>
		</div>
		<!-- END STEP 2 -->
	</form>	<!-- END FORGOT PASSWORD FORM -->
</div>
<div class="copyright">
