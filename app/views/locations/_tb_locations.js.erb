<% array = [] %>
<% @locations.each do |location| %>
	<%
	if location.province == nil || location.province.empty?
		city = "#{location.city}"
	else
		city = "#{location.city}, #{location.province}"
	end
	array.push({
		Name: location.location_name,
		Address: location.address,
		City: city,
		Created: location.created_at.strftime('%F %H:%M'),
		"Member Count": location.member_count,
		"Details": "https://toolbeam.com/t/ogauhjeo/response?id=#{location.id}"
	}) %>
<% end %>
<%= array.to_json.html_safe %>
