function DetectIphone() {
   var uagent = navigator.userAgent.toLowerCase();
   console.log(uagent);
   if(uagent.search("iphone") > -1 || uagent.search("ipad") > -1) {
      $("#ios_download").show();
   } else if(uagent.search("android") > -1) {
   		$("#android_download").show();
   } else {
      $("#ios_download").show();
      $("#android_download").show();
   }
}
</script>
